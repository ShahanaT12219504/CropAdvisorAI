<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="12dp">

    <!-- Header for Agri-Expert -->
    <LinearLayout
        android:id="@+id/chat_header_static"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="12dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/agri_expert_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_agri_expert"
            android:layout_marginEnd="12dp"
            app:shapeAppearanceOverlay="@style/RoundedImage"
            android:contentDescription="Agri Expert Bot" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/chat_name_expert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Agri-Expert Chatbot"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/green_700" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ask about pest control, fertilizers, or local regulations."
                android:textSize="14sp"
                android:textColor="#666666" />
        </LinearLayout>
    </LinearLayout>

    <!-- RecyclerView for messages -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/message_recycler_view"
        android:layout_below="@id/chat_header_static"
        android:layout_above="@id/message_input_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:scrollbars="vertical" />

    <!-- Message input layout -->
    <LinearLayout
        android:id="@+id/message_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#F2F3F5"
        android:padding="8dp"
        android:elevation="4dp">

        <EditText
            android:id="@+id/message_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Type your agriculture question..."
            android:background="#666666"
            android:textColor="#000000"
            android:textColorHint="@color/black"
            android:padding="12dp"
            android:maxLines="4"
            android:inputType="textMultiLine" />

        <ImageButton
            android:id="@+id/send_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_send"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Send"
            android:padding="12dp"
            app:tint="@color/green_700" />
    </LinearLayout>
</RelativeLayout>
