<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme (if you need a custom one) -->
    <!-- You might use Theme.Material3.Light.NoActionBar here if your app targets modern Android -->
    <style name="Theme.CropAdvisorAI" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/green_700</item>
        <item name="colorPrimaryVariant">@color/green_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/green_700</item>
        <item name="colorSecondaryVariant">@color/green_500</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Fix for the missing style in Chat layouts (Unit I: Customization) -->
    <style name="RoundedImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Custom Text Styles used in your Fragments -->

    <style name="TextAppearance.App.Subtitle" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.App.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/green_700</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
