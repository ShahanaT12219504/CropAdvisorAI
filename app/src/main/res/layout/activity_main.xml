<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="20dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="ðŸŒ¾ Crop Recommendation"
            android:textSize="24sp"
            android:textColor="@color/green_700"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Enter Soil and Climate Details"
            android:textColor="@color/black"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/soilType"
            android:hint="Soil Type (e.g., Loamy, Sandy)"
            android:inputType="text"
            android:backgroundTint="@color/green_700"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/nitrogen"
            android:hint="Nitrogen (%)"
            android:inputType="numberDecimal"
            android:backgroundTint="@color/green_700"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/ph"
            android:hint="Soil pH Level"
            android:inputType="numberDecimal"
            android:backgroundTint="@color/green_700"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/temp"
            android:hint="Average Temperature (Â°C)"
            android:inputType="numberDecimal"
            android:backgroundTint="@color/green_700"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/rainfall"
            android:hint="Rainfall (mm)"
            android:inputType="numberDecimal"
            android:backgroundTint="@color/green_700"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/humidity"
            android:hint="Humidity (%)"
            android:inputType="numberDecimal"
            android:backgroundTint="@color/green_700"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnRecommend"
            android:text="Get Crop Recommendation"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/green_700"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>
